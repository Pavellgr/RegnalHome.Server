<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RegnalHome.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:RegnalHome.App.Pages"
    xmlns:app="clr-namespace:RegnalHome.App">

    <FlyoutItem Title="Executor" FlyoutIcon="executor.png" >
        <ShellContent ContentTemplate="{DataTemplate pages:ExecutorPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Irrigation" FlyoutIcon="irrigation.png" >
        <ShellContent ContentTemplate="{DataTemplate pages:Irrigation}" />
    </FlyoutItem>

    <ShellContent
        Title="Home"
        Route="MainPage" >
        <pages:MainPage/>
    </ShellContent>

</Shell>
