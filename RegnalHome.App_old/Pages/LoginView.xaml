<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:RegnalHome.App.Converters"
             x:Class="RegnalHome.App.Pages.LoginView">
    <ContentView.Resources>
        <converters:BoolToObjectConverter x:Key="BoolToVisibilityConverter" TrueValue="{x:Static Visibility.Visible}" FalseValue="{x:Static Visibility.Collapsed}"/>
        <converters:BoolToObjectConverter x:Key="InvertedBoolToVisibilityConverter" FalseValue="{x:Static Visibility.Visible}" TrueValue="{x:Static Visibility.Collapsed}"/>
    </ContentView.Resources>
    <StackLayout FlowDirection="RightToLeft" Orientation="Horizontal" HeightRequest="50">
        <Button 
            Text="Log In"
            SemanticProperties.Hint="Click to log in"
            Clicked="OnLogInClicked"
            HorizontalOptions="Center"
            IsVisible="{Binding MauiProgram.IsAuthenticated, Converter={StaticResource BoolToVisibilityConverter}}"/>
        <Button 
            Text="Log Out"
            SemanticProperties.Hint="Click to log out"
            Clicked="OnLogOutClicked"
            HorizontalOptions="Center" 
            IsVisible="{Binding MauiProgram.IsAuthenticated, Converter={StaticResource InvertedBoolToVisibilityConverter}}"/>
    </StackLayout>
</ContentView>