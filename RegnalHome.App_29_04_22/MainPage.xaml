<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:converters="clr-namespace:RegnalHome.App.Converters"
    x:Class="RegnalHome.App_29_04_22.MainPage">

    <TabbedPage.Resources>
        <converters:BoolToObjectConverter x:Key="InvertedBoolConverter" TrueValue="False" FalseValue="True"/>
    </TabbedPage.Resources>

    <ContentPage Title="Executor"
                 IconImageSource="executor.png">
        <StackLayout Orientation="Horizontal" HeightRequest="100"
                     HorizontalOptions="Center"
                     VerticalOptions="Start">
            <Button IsEnabled="{Binding ExecutorIsRunning, Converter={StaticResource InvertedBoolConverter}}" Text="Start" Clicked="StartExecutorOnClicked"  Margin="10" />
            <Button IsEnabled="{Binding ExecutorIsRunning}" Text="Stop" Clicked="StopExecutorOnClicked" Margin="10"/>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Tab 2">
        <StackLayout>
            <Label Text="Tab 3"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage>
</TabbedPage>
